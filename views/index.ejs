<%-include ('partials/header.ejs') %> 
<body>
    <%-include ('partials/navbar.ejs') %>

    <div class="container">
        <br>
        <h2>Procedures e Functions!</h2>
        <a href="/procedure/cadastrar" class="btn btn-success">Cadastrar nova</a>
        <br>
        <hr>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Banco de dados</th>
                    <th>Versão</th>
                    <th>Ações</th>
                </tr>
            </thead>

            <tbody>
                <% procedures.forEach(procedure => { %>
                    <tr>
                        <th><%= procedure.nameProcedure %></th>
                        <% if (procedure.bancoProcedure == 1) { %>
                            <td>SQL</td>
                         <% } else { %>
                            <td>Oracle</td>
                        <%}%>
                        <th><%= procedure.versaoProcedure %></th>

                        <th>

                            <a href="/procedure/executar/<%= procedure.idProcedure %>">
                                <i class="fas fa-play-circle" id="exec"></i>
                            </a>

                        </th>

                        
                    </tr>
                <% }) %>


            </tbody>

        </table>


    </div>

</body>
</html>